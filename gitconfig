# Include delta configuration
[include]
	path = ~/.config/git/delta.gitconfig

[user]
	name = Umberto Vanucci
	email = 198199286+Umbi89-sudo@users.noreply.github.com

[core]
	editor = hx
	autocrlf = input
	whitespace = trailing-space,space-before-tab

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[status]
	showUntrackedFiles = all

[log]
	abbrevCommit = true

[alias]
	# Status
	st = status -sb
	s = status -s

	# Checkout
	co = checkout
	cob = checkout -b

	# Branch
	br = branch
	bra = branch -a
	brd = branch -d

	# Commit
	ci = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	amend = commit --amend

	# Reset
	undo = reset --soft HEAD~1
	unstage = reset HEAD --

	# Log
	logline = log --oneline --graph --decorate --all
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD

	# Diff
	d = diff
	dc = diff --cached
	ds = diff --staged

	# Remote
	r = remote -v

	# Stash
	sl = stash list
	sa = stash apply
	ss = stash save

	# Utils
	visual = !gitk
	aliases = config --get-regexp alias
	whoami = config user.email

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
